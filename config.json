{
  "port": 8080,
  "logger": {
    "format": "dev",
    "level": {
      "console": "debug",
      "file": "info"
    }
  },
  "mongoose": {
    "uri": "mongodb://localhost/sgtravel",
    "maxArrayLimit": 7500
  },
  "security": {
    "tokenLife": 3600,
    "grantCodeLife": 600
  },
  "analytics": {
    "gaAccountId": "UA-XXXX-XX",
    "serverUrl": "https://sg-travelbuddy.rhcloud.com/"
  },
  "mailer": {
    "user": "mail@email.com",
    "defaultFromAddress": "'Team-SGTravelBuddy' <mail@email.com>",
    "clientId": "#client-id#",
    "clientSecret": "#client-secret#",
    "refreshToken": "#refresh-token#",
    "accessToken": "#access-token#",
    "timeout": 3600
  }
}